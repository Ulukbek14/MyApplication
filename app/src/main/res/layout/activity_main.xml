<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5017BC"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/header_txt"
        android:layout_margin="32dp"
        android:text="   ➡   "
        android:textSize="88sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <EditText
        android:id="@+id/login_et"
        android:textColorHint="@color/teal_700"
        android:layout_margin="12dp"
        android:hint=" 🧑  Email"
        android:background="@drawable/rounded_edittext"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintLeft_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraint_toTopOf="parent"
        android:layout_width="match_parent"
        android:layout_height="50dp"/>

    <EditText
        android:id="@+id/password_et"
        android:textColorHint="@color/teal_700"
        android:hint=" 🔒  Password"
        android:layout_margin="12dp"
        android:background="@drawable/rounded_edittext"
        android:textColor="@color/black"
        app:layout_constraintTop_toBottomOf="@id/login_et"
        android:layout_width="match_parent"
        android:layout_height="50dp" />


    <TextView
        android:id="@+id/remember_me"
        android:text="☑️ Remember Me"
        android:textColor="@color/white"
        android:layout_margin="12dp"
        android:textSize="15sp"
        android:backgroundTint="@color/white"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/password_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/forget_password"
        android:text="🔒 Forget Password"
        android:textColor="@color/white"
        android:textSize="15sp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="50dp"
        android:backgroundTint="@color/white"
        app:layout_constraintTop_toBottomOf="@id/password_et"
        app:layout_constraintLeft_toRightOf="@id/remember_me"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/enter_btn"
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/remember_me"
        android:text="LOGIN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:layout_margin="12dp"
        app:layout_constraintTop_toBottomOf="@id/enter_btn"
        android:text="SIGN UP"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</androidx.constraintlayout.widget.ConstraintLayout>